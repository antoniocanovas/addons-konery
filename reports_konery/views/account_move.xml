<?xml version='1.0' encoding='UTF-8'?>

<odoo>
    <record id="view_move_form_report_type" model="ir.ui.view">
        <field name="name">invoice.report.selector</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='journal_div']" position="after">
                <label for="report_type" string="Report Type"/>
                <div name="report_type" class="d-flex">
                    <field name="report_type" domain="[('model','=','account.move')]"/>
                </div>
            </xpath>
        </field>
    </record>


    <record id="action_report_type" model="ir.actions.act_window">
        <field name="name">Report Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">report.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="report_type"
            parent="account.menu_finance_configuration"
            name="Report Type" action="action_report_type"/>

     <record id="ir_report_view_custom" model="ir.ui.view">
        <field name="name">ir.actions.report.custom</field>
        <field name="model">ir.actions.report</field>
        <field name="inherit_id" ref="base.act_report_xml_view"/>
        <field name="arch" type="xml">
            <field name="pdf_watermark" position="replace">
                <field name="use_company_watermark"/>
            </field>
            <field name="attachment" position="after">
                <field name="report_type_ids"/>
            </field>
        </field>
    </record>



</odoo>