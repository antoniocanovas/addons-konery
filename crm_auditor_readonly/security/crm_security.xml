<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="group_crm_auditor_readonly" model="res.groups">
        <field name="name">Group crm auditor readonly</field>
        <field name="comment">Auditor of CRM leads Readonly</field>
        <field name="category_id" ref="base.module_category_sales_sales"/>
        <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <data noupdate="1">
        <record id="crm_team_rule_auditor_readonly" model="ir.rule">
            <field name="name">Auditor readonly All Salesteam</field>
            <field ref="sales_team.model_crm_team" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('crm_auditor_readonly.group_crm_auditor_readonly'))]"/>
        </record>

        <record id="crm_rule_all_lead_auditor" model="ir.rule">
            <field name="name">All Leads</field>
            <field ref="model_crm_lead" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('crm_auditor_readonly.group_crm_auditor_readonly'))]"/>
        </record>

        <record id="crm_activity_report_rule_all_activities_auditor" model="ir.rule">
            <field name="name">All Activities</field>
            <field ref="model_crm_activity_report" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('crm_auditor_readonly.group_crm_auditor_readonly'))]"/>
        </record>

        <record id="crm_activity_report_rule_personal_activities_auditor" model="ir.rule">
            <field name="name">Personal Activities</field>
            <field ref="model_crm_activity_report" name="model_id"/>
            <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
            <field name="groups" eval="[(4, ref('crm_auditor_readonly.group_crm_auditor_readonly'))]"/>
        </record>
    </data>

</odoo>
